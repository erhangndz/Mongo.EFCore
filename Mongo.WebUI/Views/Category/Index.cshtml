@using Mongo.WebUI.Entities
@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Kategoriler</h1>

<table class="table table-hover">
<tr>
    <th>#</th>
    <th>Kategori Adı</th>
    <th></th>
</tr>
@foreach (var item in Model)
    {
        <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>
            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
            <a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">Güncelle</a>
        </td>
        </tr>
    }
</table>

<br />
<a asp-controller="Category" asp-action="Create" class="btn btn-dark" >Yeni Kategori </a>